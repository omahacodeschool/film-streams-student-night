<div class="container p-rel">
	<h1 class = "text-center">Upcoming Student Nights</h1>
	<hr>

	<table class="table">
		<thead>
			<tr>
				<th>
					Date
				</th>
				<th>
					Title
				</th>
				<th>
					Location
				</th>
			</tr>			
		</thead>
		<tbody>
			<% @events.each do |event| %>
				<tr>
					<td>
						<%= event_date(event) %>
					</td>
					<td>
						<%= event.title %>
					</td>
					<td>
						<%= event.location %>
					</td>
					<td>
						<a href="events/<%= event.id %>" class="btn custom-btn borderless">
							Edit <span class="glyphicon glyphicon-edit"></span>
					  </a>
					  <a href="events/<%= event.id %>/checkins/new" class="btn custom-btn borderless">
					  	Student Sign In<span class="glyphicon glyphicon-view"></span>
		 			  </a>
					</td>
				</tr>
			<% end %>	
			
		</tbody>
		
	</table>

	<h2>Most Recent Events</h2>
	<table class="table">
		<thead>
			<tr>
				<th>
					Date
				</th>
				<th>
					Title
				</th>
				<th>
					
				</th>
			</tr>			
		</thead>
		<tbody>
			<% @recent_events.each do |event| %>
				<tr>
					<td>
						<%= event_date(event) %>
					</td>
					<td>
						<%= event.title %>
					</td>
					<td>
						<a href="events/<%= event.id %>" class="btn custom-btn borderless">
							Edit <span class="glyphicon glyphicon-edit"></span>
					  </a>
					</td>
				</tr>
			<% end %>	
			
		</tbody>
		
	</table>
	 <a href="events/past" class="btn custom-btn borderless">
	Show All Past Events<span class="glyphicon glyphicon-view"></span></a>
</div>
