<div class="container">
  <h2 class="text-center">Hello!</h2>
  <h4 class="text-center">Let's get you checked in.</h4>
  <hr>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

       <%= form_for([@event, @checkin]) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Please enter your email address." %>
          <%= f.text_field :email, class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :email_confirmation, "Type in your email once more, to confirm." %>
          <%= f.text_field :email_confirmation, class: "form-control" %>
        </div>

        <%= f.submit "Submit", class: "btn custom-btn" %>
      <% end %>
    </div>
  </div>
</div>
