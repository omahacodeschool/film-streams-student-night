<div class="container p-rel">
	<h1 class = "text-center">Here are the results that were found for <%= @findStudent %></h1>
	<div class = "text-center"><a href="/edit_students">Go Back To Search</a></div>
	<table class="table">
		<thead>
			<tr>
				<th>
					Name
				</th>
				<th>
					Email
				</th>
				<th>
					<!-- placeholder for edit -->
				</th>
				<th>
					<!-- placeholder for delete -->
				</th>
			</tr>			
		</thead>
		<tbody>
			<div>
				<% @student.each do |student| %>
					<tr>
						<td>
							<%= student.name%>
						</td>
						<td>
							<%= student.email%>
						</td>
						<td>
							<a href="edit_students/edit?id=<%= student.id %>" class="btn custom-btn borderless"> Edit <span class="glyphicon glyphicon-edit"></span></a>
						</td>
						<td>
							<%= button_to 'Delete Student', edit_students_path(@student), class: 'btn custom-btn-dngr navbar-btn', data: {:confirm => 'Are you sure? This will delete the student'}, :method => :delete %>
						</td>
					</tr>
				<% end %>
			</div>	
			
		</tbody>
		
	</table>
</div>