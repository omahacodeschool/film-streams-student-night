<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= render 'layouts/error_messages' %>
      <%= form_for :user do |f| %>
      
        <%= f.label :email  %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Submit", class: "btn custom-btn" %>
      <% end %>
    </div>
  </div>
</div>