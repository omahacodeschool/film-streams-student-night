<div class="container">
  <div class="row">
    <div class="col-sm-6 col-sm-offset-3">
      <%= render 'layouts/error_messages' %>
      <%= form_for :user do |f| %>
      
        <%= f.label :email  %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>
        <div class="row">
          <%= f.submit "Login", class: "btn custom-btn col-xs-4 col-xs-offset-4" %>
        </div>
      <% end %>
    </div>
  </div>
</div>