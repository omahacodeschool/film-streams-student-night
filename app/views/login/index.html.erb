<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">

  
      <%= form_for(@current_user, url:{controller: "login", action: "create"}) do |f| %>

        <%= f.label :email  %>
        <%= f.text_field :email, class: 'form-control' %>

        <%= f.label :password %>
        <%= f.password_field :password, class: 'form-control' %>

        <%= f.submit "Submit", class: "btn button_margin btn-primary" %>
      <% end %>
    </div>
  </div>
</div>